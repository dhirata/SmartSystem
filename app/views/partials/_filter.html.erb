<div class = "col s4">
	<div class = "card hoverable white">
		<div class = "card-content blue-grey-text text-darken-4">
			<span class="card-title blue-grey-text text-darken-4">Filter Smarties</span>
			<br />
			<% if !(@filter_category_params.empty? and @filter_company_params.empty?) %>
				<p><b>Filters Applied</b></p>
				<% @filter_company_params.each do |param| %>
					<%= param %>
					<br/> 
				<% end %>
				<% @filter_category_params.each do |param| %>
					<%= param %>
					<br/> 
				<% end %>
			<% end %>
		</div>
		<div class="card-action">
			<% if !(@filter_category_params.empty? and @filter_company_params.empty?) %>
				<p><b>Select Filters</b></p>
			<% end %>
			<% if @filter_company_params.empty? %>
				<!-- Dropdown Trigger -->
			  	<a class='dropdown-button btn light-blue white-text' href='#' data-activates='dropdown1'>Companies</a>
			 	<!-- Dropdown Structure -->		  		
			  	<ul id='dropdown1' class='dropdown-content blue-text text-light'>
			  		<% @companies.each do |company| %>
			    		<li><a href="filterCompany" class = "blue-text"><%= company.name %></a></li>
			    	<% end %>
			  	</ul>
			  	<br/>
		  	<% end %>
		  	<% if @filter_category_params.empty? %>
			  	<!-- Dropdown Trigger -->
			  	<a class='dropdown-button btn light-blue white-text' href='#' data-activates='dropdown2'>Categories</a>
			  	<!-- Dropdown Structure -->
			  	<ul id='dropdown2' class='dropdown-content blue-text text-light'>
			  		<% @all_categories.each do |category| %>
			    		<li><a href= "filterCategory" class = "blue-text"><%= category %></a></li>
			    	<% end %>
			  	</ul>
		  	<% end %>
		  	<% if !(@filter_category_params.empty? and @filter_company_params.empty?) %>
		  		<a class='dropdown-button btn light-blue white-text' href='home'>Reset Filters</a>
		  	<% end %>
		</div>
	</div>
</div>